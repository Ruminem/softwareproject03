<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    android:orientation="vertical"
    tools:context=".WriteBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:text="등 록"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_marginTop="1dp"
            android:paddingBottom="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="제목"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <EditText
                android:hint="제목을 입력하세요"
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="none|textPersonName"
                android:textColorHint="@color/colorGrey"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="분류"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/selectCategorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/colorRed"
                android:gravity="end"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="사진"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <Button
                android:text="올리기"
                android:id="@+id/photo_Button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_login"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:text="여기는사진들어감"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="경매시작가"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/auctionStartingPrice"
                android:hint="50000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="none|textPersonName"
                android:textColorHint="@color/colorGrey"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="거래지역"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radio_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio_location0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="택배" />

                <RadioButton
                    android:id="@+id/radio_location1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정위치" />

                <RadioButton
                    android:id="@+id/radio_location2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="직접입력" />
            </RadioGroup>

        </LinearLayout>
        <EditText
            android:text="직접입력선택시이부분활성화"
            android:id="@+id/locationDirectInput"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorRed"
            android:textSize="30sp"
            android:textStyle="bold"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:text="제한시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/radio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio_timeLimit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="1시간" />

                <RadioButton
                    android:id="@+id/radio_timeLimit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3시간" />

                <RadioButton
                    android:id="@+id/radio_timeLimit5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5시간" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Button
                android:text="등록"
                android:id="@+id/registerButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:background="@drawable/button_login"
                android:textColor="@color/colorWhite"/>
            <Button
                android:text="취소"
                android:id="@+id/cancelButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/button_login"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>