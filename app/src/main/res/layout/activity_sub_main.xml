<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    tools:context=".SubMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- 컴퓨터 이미지 버튼 ( 새로 만들어야댐 ) -->
            <ImageButton
                android:id="@+id/subCategoryButtonComputer"
                android:layout_width="205dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/sub_main_button_computer" />

            <!-- 자동차 이미지 버튼 ( 새로 만들어야댐 ) -->
            <ImageButton
                android:id="@+id/subCategoryButtonCar"
                android:layout_width="205dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/sub_main_button_car" />

            <!-- 오토바이 이미지 버튼 ( 새로 만들어야댐 ) -->
            <ImageButton
                android:id="@+id/subCategoryButtonMotorCycle"
                android:layout_width="205dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/sub_main_button_motorcycle" />

            <!-- 가전제품 이미지 버튼 ( 새로 만들어야댐 ) -->
            <ImageButton
                android:id="@+id/subCategoryButtonElectronics"
                android:layout_width="205dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/sub_main_button_electronics" />

            <!-- 휴대폰 이미지 버튼 ( 새로 만들어야댐 ) -->
            <ImageButton
                android:id="@+id/subCategoryButtonPhone"
                android:layout_width="205dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/sub_main_button_phone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>